<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:context="http://www.springframework.org/schema/context"
xmlns:mvc="http://www.springframework.org/schema/mvc"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

   <!-- TODO - add in component scanning starting at package com.javatunes.web -->
	<context:component-scan base-package="com.datahub.controller.copy"/>
	<!-- TODO - add in component scanning starting at package com.javatunes.web -->
	<context:component-scan base-package="com.datahub.utils"/>
	
	<!-- mvc:annotation-driven initializes a number of capabilities to support Spring MVC -->
	<mvc:annotation-driven/>

  <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
    <property name="prefix" value="/jsp/"/>
    <property name="suffix" value=".jsp"/>
  </bean>
	
</beans>